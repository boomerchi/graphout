{
    "properties": {
        "graphite_url": {
            "type": "string"
        },
        "graphite_auth": {
            "type": "string"
        },
        "include": {
            "type": "array"
        },
        "log_file": {
            "type": "string"
        },
        "log_level": {
            "type": "string"
        },
        "interval": {
            "type": "integer",
            "minimum": 10
        },
        "splay": {
            "type": ["boolean"]
        },
        "outputs": {
            "additionalProperties": false,
            "patternProperties": {
                "^\\w+$": {
                    "properties": {
                        "output": {
                            "type": "string"
                        },
                        "params": {
                            "type": "object"
                        }
                    },
                    "required": [
                        "output",
                        "params"
                    ],
                    "type": "object"
                }
            },
            "type": "object"
        },
        "queries": {
            "additionalProperties": false,
            "patternProperties": {
                "^\\w+$": {
                    "properties": {
                        "query": {
                            "type": "string"
                        },
                        "from": {
                            "type": "string"
                        },
                        "until": {
                            "type": "string"
                        },
                        "calculation": {
                            "type": "string",
                            "enum": ["avg", "min", "max"]
                        },
                        "interval": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "query",
                        "from",
                        "until"
                    ],
                    "type": "object"
                }
            },
            "type": "object"
        }
    },
    "required": [
        "graphite_url",
        "log_file",
        "log_level",
        "interval",
        "splay",
        "queries",
        "outputs",
        "include"
    ]
}
