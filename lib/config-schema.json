{
    "properties": {
        "graphite_url": {
            "type": "string",
            "format": "uri"
        },
        "graphite_auth": {
            "type": "string"
        },
        "include": {
            "type": "array"
        },
        "interval": {
            "minimum": 10,
            "type": "integer"
        },
        "log_file": {
            "type": "string"
        },
        "log_level": {
            "type": "string",
            "enum": ["error", "warn", "info", "debug"]
        },
        "splay": {
            "type": "boolean"
        },
        "outputs": {
            "additionalProperties": false,
            "minProperties": 1,
            "patternProperties": {
                "^[\\w.-]+$": {
                    "properties": {
                        "output": {
                            "type": "string"
                        },
                        "params": {
                            "type": "object"
                        }
                    },
                    "required": [
                        "output",
                        "params"
                    ],
                    "type": "object"
                }
            },
            "type": "object"
        },
        "queries": {
            "additionalProperties": false,
            "minProperties": 1,
            "patternProperties": {
                "^[\\w.-]+$": {
                    "properties": {
                        "calculation": {
                            "type": "string",
                            "enum": ["avg", "min", "max"]
                        },
                        "from": {
                            "type": "string"
                        },
                        "interval": {
                            "type": "integer"
                        },
                        "query": {
                            "type": "string"
                        },
                        "until": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "query",
                        "from",
                        "until"
                    ],
                    "type": "object"
                }
            },
            "type": "object"
        }
    },
    "required": [
        "graphite_url",
        "queries",
        "outputs"
    ]
}
